&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">&lt;span class="nx">replace_path&lt;/span> &lt;span class="p">=&lt;/span> &lt;span class="s1">&amp;#39;/&amp;#39;&lt;/span>
